</head>


<body>
    <h1>Giriş Formu</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Formu</h2>
      @using (Html.BeginForm("Giris", "GirisYap", FormMethod.Post))
      {

            <div class=" w3l-form-group">
                <label>Kulanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kulanıcı" required="required" 
                           name="kulanici"/>
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifre" required="required"
                           name="sifre"/>
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifremi Unuttum?</a>
                <p><input type="checkbox">Değişiklikleri Kaydet</p>
            </div>
            <button type="submit">Giriş Yap</button>
      }

    </div>
    

</body>

</html>